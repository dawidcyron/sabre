{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {{ parent() }}
    <h1 class="list-header">User</h1>

    <table class="show-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>Phone number</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>
                    Street
                </th>
                <td>
                    {{ user.address.street }}
                </td>
            </tr>
            <tr>
                <th>
                    Country
                </th>
                <td>
                    {{ user.address.country }}
                </td>
            </tr>
            <tr>
                <th>
                    City
                </th>
                <td>
                    {{ user.address.city }}
                </td>
            </tr>
            <tr>
                <th>
                    Post code
                </th>
                <td>
                    {{ user.address.postCode }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="back-to-list">Back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="edit-button">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
